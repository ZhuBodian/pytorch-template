{
    "name": "AlexNet",
    "n_gpu": 1,

    "arch": {
        "type": "AlexModel",
        "args": {},
	    "pretrain_weights_name": null
    },
    "data_loader": {
        "type": "TinyImageNetDataloader",
        "args":{
            "data_dir": "../autodl-tmp/data/tinyImageNet/",
            "batch_size": 128,
            "shuffle": true,
            "validation_split": 0.25,
            "num_workers": 7,
            "assign_val_sample": true,
            "load_all_images_to_memories": true
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "cross_entropyLoss",
    "metrics": [
        "accuracy"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "../autodl-tmp/saved/",
        "save_period": null,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true,
        "save_non_optimum": false
    }
}
